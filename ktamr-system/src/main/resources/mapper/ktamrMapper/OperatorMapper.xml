<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktamr.mapper.HaOperatorMapper">

    <resultMap id="OperatorMap" type="com.ktamr.domain.HaOperator">
        <result column="operator_code" property="operatorCode" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_name" property="operatorName" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_pwd" property="operatorPwd" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_sex" property="operatorSex" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_mobile" property="operatorMobile" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_remark" property="operatorRemark" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_upper" property="operatorUpper" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_level" property="operatorLevel" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_rgn_type" property="operatorRgnType" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_state" property="operatorState" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_creattime" property="operatorCreattime" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operator_company" property="operatorCompany" javaType="java.lang.String" jdbcType="VARCHAR"></result>
        <result column="operatorLevelCode" property="operatorLevelCode" javaType="java.lang.Integer" jdbcType="INTEGER"></result>
        <result column="rgnAndAreaId" property="rgnAndAreaId" javaType="java.lang.String" jdbcType="VARCHAR"></result>
    </resultMap>

    <select id="selectOperatorByUid" resultMap="OperatorMap">
      Select  operator_code
      ,operator_name
      ,operator_sex
      ,operator_pwd
      ,operator_upper
      ,operator_level
      ,operator_state
      ,operator_company
      ,operator_rgn_type
      ,case when o.operator_level = 'admin' then 0 when o.operator_level = 'normal' then 1 when o.operator_level = 'readMan' then 2 when o.operator_level = 'viewMan' then 3 end AS operatorLevelCode
	  ,case when a.areano is not null then a.areano when n.id is not null then n.id when o.operator_rgn_type = 'all' then '' else '-1' end AS rgnAndAreaId
      From ha_operator o
      left join ha_rgn n on n.name = o.operator_name
	  left join ha_area a on a.name = o.operator_name
      Where operator_code = #{uid}
      limit 1
    </select>
    <select id="selectOperatorRgnByName" resultType="java.lang.String">
        select id from ha_rgn where name = #{operatorName}
    </select>

    <select id="selectOperatorAreaByName" resultType="java.lang.String">
        select areano from ha_area where name = #{operatorName}
    </select>
</mapper>